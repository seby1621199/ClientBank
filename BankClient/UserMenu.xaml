<Window x:Class="BankClient.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankClient"
        mc:Ignorable="d"
        Title="User Menu" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MouseDown="Window_Mouse" FontStyle="Normal">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Images/background.jpg" AlignmentY="Center" AlignmentX="Center"/>
        </Grid.Background>
        <Button x:Name="check_balance_button" HorizontalAlignment="Left" Margin="39,103,0,0" VerticalAlignment="Top" Width="45"  Height="45" ClickMode="Release" Focusable="False" Foreground="#FFD4A1A1" IsHitTestVisible="False" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/Images/check_balance_icon.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
